:javascript
  $(function(){
   $('#tweets').tweetable({username: 'harrybrundage', limit: 8, retweets: true, time:true});
  	var _config = {username: 'hornairs',        // last.fm username
                   placeholder: 'songs',       // id of the div in HTML to use for cd covers
                   defaultthumb: '/images/lastfm_record.jpg',  // image to show when no cd cover or artist image was found
                   period: '7day',              // which period/type of data do you want to show? you can choose from
                                                // recenttracks, 7day, 3month, 6month, 12month, overall, topalbums and lovedtracks
                   count: 8,                          // number of images to show
                   refresh: 5,                         // when to get new data from last.fm (in minutes)
                   offset: 3                           // difference between your timezone and GMT.
                  };
  
    //lastFmRecords.debug();                             // log to console
    lastFmRecords.init(_config);
  });

#tweets
  %h3 Words
  %a.small{:href => "http://twitter.com/harrybrundage"} my twitter
#songs
  %h3 Songs
  %a.small{:href => "http://last.fm/user/hornairs"} my last.fm

%section#articles
  %h3 Latest Articles
  - articles[0..2].each do |article|
    %article.post
      %header
        %h1
          %a{:href => article.path}= article.title
          %span.date= article.date
      %section.content= article.summary
      .more
        %a{:href=> article.path} read on &raquo;

